{
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:unit": "ts-mocha -p ./tsconfig.json -t 1000000 tests/unit-tests.ts tests/stack-overflow-tests.ts",
    "test:integration": "ts-mocha -p ./tsconfig.json -t 1000000 tests/integration-tests.ts",
    "test:security": "ts-mocha -p ./tsconfig.json -t 1000000 tests/security-tests.ts",
    "test:performance": "ts-mocha -p ./tsconfig.json -t 1000000 tests/performance-tests.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance",
    "test:coverage": "nyc ts-mocha -p ./tsconfig.json -t 1000000 tests/**/*.ts",
    "test:watch": "ts-mocha -p ./tsconfig.json -t 1000000 --watch tests/**/*.ts",
    "test:ci": "npm run test:all && npm run test:coverage"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "bs58": "^6.0.0",
    "nanoid": "^3.3.8",
    "serialize-javascript": "^6.0.2"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "anchor-bankrun": "^0.3.0",
    "chai": "^4.3.4",
    "mocha": "^11.7.4",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
