{
  "reporter": ["text", "html", "json", "lcov"],
  "reporter-dir": "coverage",
  "report-dir": "coverage",
  "temp-dir": ".nyc_output",
  "cache": true,
  "all": true,
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "tests/utils/**/*.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.ts",
    "node_modules/**/*",
    "dist/**/*",
    "target/**/*"
  ],
  "extension": [".ts"],
  "require": ["ts-node/register"],
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  }
}
