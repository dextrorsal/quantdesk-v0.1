{
  "name": "quantdesk",
  "version": "1.0.0",
  "description": "QuantDesk - Professional Perpetual Trading Platform",
  "private": true,
  "scripts": {
    "build": "pnpm run build:backend && pnpm run build:frontend && pnpm run build:admin",
    "build:backend": "cd backend && pnpm run build",
    "build:frontend": "cd frontend && pnpm run build",
    "build:admin": "cd admin-dashboard && pnpm run build",
    "start": "docker-compose up -d",
    "start:dev": "pnpm run start:backend & pnpm run start:frontend & pnpm run start:admin",
    "start:backend": "cd backend && pnpm run start:dev",
    "start:frontend": "cd frontend && pnpm run dev",
    "start:admin": "cd admin-dashboard && pnpm run dev",
    "dev": "bash scripts/start-all.sh",
    "dev:all": "pnpm -r --parallel run dev",
    "stop": "bash scripts/stop-all.sh",
    "dev:pnpm-workspace": "pnpm --filter=* dev",
    "install:backend": "cd backend && pnpm install",
    "install:frontend": "cd frontend && pnpm install",
    "install:admin": "cd admin-dashboard && pnpm install",
    "install:data-ingestion": "cd data-ingestion && pnpm install",
    "install:mikey": "cd MIKEY-AI && pnpm install",
    "install:all": "pnpm run install:backend && pnpm run install:frontend && pnpm run install:admin && pnpm run install:data-ingestion && pnpm run install:mikey",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:contracts": "anchor run test -- --test-name \"referral tests\"",
    "test:backend": "cd backend && pnpm test",
    "test:frontend": "cd frontend && pnpm run build:check",
    "test:admin": "cd admin-dashboard && pnpm run build",
    "test:all": "pnpm run test",
    "lint": "pnpm run lint:backend && pnpm run lint:frontend && pnpm run lint:admin",
    "lint:backend": "cd backend && pnpm run lint",
    "lint:frontend": "cd frontend && pnpm run lint",
    "lint:admin": "cd admin-dashboard && pnpm run lint",
    "lint:fix": "pnpm run lint:backend -- --fix && pnpm run lint:frontend -- --fix && pnpm run lint:admin -- --fix",
    "type-check": "pnpm run type-check:backend && pnpm run type-check:frontend && pnpm run type-check:admin",
    "type-check:backend": "cd backend && pnpm run type-check",
    "type-check:frontend": "cd frontend && pnpm run type-check",
    "type-check:admin": "cd admin-dashboard && pnpm run type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "env:scan": "node scripts/scan-env.js",
    "env:validate": "node scripts/validate-env.js",
    "env:lint": "dotenv-linter",
    "env:check": "npm run env:scan && npm run env:validate",
    "seed": "npx ts-node scripts/seed/seed.ts",
    "monitor": "npx ts-node scripts/monitor-protocol.ts",
    "monitor:user": "npx ts-node scripts/monitor-users.ts",
    "devnet:test:suite": "npx ts-node scripts/devnet_test_suite.ts",
    "devnet:test:suite:verbose": "VERBOSE=true npx ts-node scripts/devnet_test_suite.ts",
    "devnet:smoke": "bash scripts/run-devnet-smoke.sh"
  },
  "pnpm": {
    "overrides": {
      "rpc-websockets": "7.5.1",
      "@solana/web3.js": "1.87.0"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "solana",
    "defi",
    "perpetual",
    "trading",
    "dex",
    "quantdesk"
  ],
  "author": "QuantDesk Team",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.56.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@solana/web3.js": "1.87.0",
    "@types/chai": "^5.2.3",
    "@types/node": "^20.19.20",
    "bs58": "^6.0.0",
    "chai": "^6.2.0",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
