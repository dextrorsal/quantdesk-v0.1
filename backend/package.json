{
  "name": "quantdesk-backend",
  "version": "1.0.0",
  "description": "QuantDesk Backend API Gateway",
  "main": "dist/server.js",
  "scripts": {
    "dev": "./start-backend.sh",
    "dev:old": "TS_NODE_TRANSPILE_ONLY=1 nodemon --exec \"node -r ts-node/register\" src/server.ts",
    "kill": "./kill-backend.sh",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "ts-node src/server.ts",
    "init:devnet": "ts-node src/scripts/init-devnet.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
